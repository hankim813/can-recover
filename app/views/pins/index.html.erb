<div class="devise-container">
  <% @pins.each do |pin| %>
    <div class="center">
      <br><br><br>
      <h1>[ <%= pin.title %> ]</h1>
    </div><!-- Header Title Ends -->
    <br>
    <div class="center author-date">
      <p>written by <%= pin.user.name %></p>
      <p><%= pin.created_at.strftime("%B %d, %Y") %></p>
    </div><!-- Author & Date Ends -->
    <br>
    <div class="center blogimage">
      <%= image_tag pin.image.url %>
    </div><!-- Post Image Ends -->
    <br>
    <div class="blog-body">
      <%= truncate((pin.description.html_safe), length: 600, omission: "...") %>
      <%= link_to "Continue â‡€", pin, style: "color: #BC992F" %>
    </div><!-- Blog Body Ends -->
    <br>
    <div class="center">
      <% if pin.user == current_user %>
        <%= link_to raw('<span class="glyphicon glyphicon-edit"></span> Edit'), edit_pin_path(pin) %>
        <%= link_to raw('<span class="glyphicon glyphicon-trash"></span> Delete'), pin, method: :delete, data: { confirm: 'This is permanent. Are you sure?' } %>
      <% end %>
    </div><!-- Footer links -->
    <hr>
  <% end %>
  <br>
  <div class="center">
     <%= will_paginate @posts %>
  </div>
</div>